{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "providers": ["openjdk"],
        "phases": {
          "setup": {
            "nixPkgs": ["jdk8"]
          },
          "build": {
            "cmd": "javac chatbot/*.java"
          }
        }
      },
      "deploy": {
        "startCommand": "java chatbot.chatServer",
        "restartPolicy": "ON_FAILURE"
      }
    }
  }