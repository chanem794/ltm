{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["jdk22", "maven"]
        },
        "build": {
          "cmd": "mvn clean package"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -jar target/server-1.0-SNAPSHOT.jar",
    "restartPolicy": "ON_FAILURE"
  }
}
