{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["jdk8", "maven"]
        },
        "build": {
          "cmd": "mvn clean package"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -cp target/Server-1.0-SNAPSHOT.jar:target/lib/Message.jar com.mycompany.Server.main.Main",
    "restartPolicy": "ON_FAILURE"
  }
}
