{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["jdk8"]
        },
        "build": {
          "cmd": "javac src/com/mycompany/Server/*.java"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -cp src com.mycompany.Server.main",
    "restartPolicy": "ON_FAILURE"
  }
}
