{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["jdk8"]
        },
        "build": {
          "cmd": "mkdir -p out && javac -d out com/mycompany/Server/main/Main.java com/mycompany/Server/function/*.java"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -cp out com.mycompany.Server.main.Main",
    "restartPolicy": "ON_FAILURE"
  }
}
